konga:
  image: pantsel/konga:next
  environment:
    BASE_URL: /konga/
  ports:
    - "1337:1337"
  networks:
    - sytel-devops-overlay-network
  deploy:
    labels:
      - traefik.backend=konga
      - traefik.port=1337
      - traefik.frontend.rule=PathPrefixStrip:/konga
      - traefik.frontend.passHostHeader=true
    mode: replicated
    replicas: 1
    restart_policy:
      condition: on-failure